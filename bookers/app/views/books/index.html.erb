<div>
  <%= flash[:notice] %>
</div>

<h2>Books</h2>

<table>

  <thead>
  <tr>
    <th><strong>Title</strong></th>
    <th><strong>Body</strong></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  
<% @books.each do |book| %>
  <tbody>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book.id) %></td>
   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
  </tr>
  </tbody>
<% end %>

</table>

</br>

<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this book from being saved
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

<h3>New Book</h3>
<%= form_with model: @book, url: '/books' do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Body</p>
  <%= f.text_area :body %>
	</br>
  <%= f.submit 'Create Book' %>
<% end %>
